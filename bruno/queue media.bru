meta {
  name: queue media
  type: http
  seq: 3
}

post {
  url: http://127.0.0.1:3050/api/media/queue?url={{url}}&reencode={{reencode}}
  body: none
  auth: inherit
}

params:query {
  url: {{url}}
  reencode: {{reencode}}
  ~ttl: {{ttl}}
}

